<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <remove src="fonts/opensans/light/opensans-300.woff2"/>
        <remove src="fonts/opensans/regular/opensans-400.woff2"/>
        <remove src="fonts/opensans/semibold/opensans-600.woff2"/>
        <remove src="fonts/opensans/bold/opensans-700.woff2"/>
    </head>
    <body>
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer.extra.link" template="Magento_Theme::footer-extra-link.phtml"/>
        </referenceContainer>
        <referenceContainer name="main">
            <container name="div.top" htmlTag="div" htmlClass="main-top" htmlId="homepage-main-top" before="-"/>
            <container name="div.content" htmlTag="div" htmlClass="main-content" htmlId="homepage-main-content" after="div.top">
                <container name="div.aside.left" htmlTag="div" htmlClass="main-aside-left" htmlId="homepage-main-aside-left" before="-">
                    <block class="Magento\Framework\View\Element\Template" name="main.btn.1" template="Magento_Theme::main-btn-1.phtml"/>
                    <block class="Magento\Framework\View\Element\Template" name="main.btn.2" template="Magento_Theme::main-btn-2.phtml"/>
                </container>
                <container name="div.aside.right" htmlTag="div" htmlClass="main-aside-right" htmlId="homepage-main-aside-right" after="div.aside.left">
                    <block class="Magento\Framework\View\Element\Template" name="main.btn.3" template="Magento_Theme::main-btn-3.phtml"/>
                    <block class="Magento\Framework\View\Element\Template" name="main.btn.4" template="Magento_Theme::main-btn-4.phtml"/>
                </container>
            </container>
        </referenceContainer>
        <move element="main.btn.4" destination="div.aside.left" after="main.btn.1"/>
        <move element="div.top" destination="div.aside.right" before="main.btn.3"/>
        <move element="div.aside.right" destination="main" after="div.content"/>
        <move element="main.btn.3" destination="div.top" before="-"/>
        <referenceContainer name="div.top" remove="true" />
        <referenceBlock name="main.btn.1" remove="true" />
        <referenceBlock name="sidebar.main.account_nav" remove="true" />
    </body>
</page>
