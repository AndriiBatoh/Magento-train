<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="main">
            <block class="Magento\Framework\View\Element\Template" name="main.link" template="Magento_Theme::custom.link.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">Google</argument>
                    <argument name="href" xsi:type="url" path="https://google.com" />
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer.link" template="Magento_Theme::custom.link.phtml">
                <arguments>
                    <argument name="label" xsi:type="string">Facebook</argument>
                    <argument name="href" xsi:type="url" path="https://facebook.com" />
                </arguments>
            </block>
        <referenceContainer name="footer">
            <block class="Magento\Framework\View\Element\Template" name="footer.extra.link" template="Magento_Theme::footer-extra-link.phtml"/>
        </referenceContainer>
    </body>
</page>
